{
  "name": "Render arXiv as HTML",
  "short_name": "arXivHTML",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Add links for rendering arXiv papers with ar5iv or academ.us.",
  "host_permissions": [
      "https://arxiv.org/",
      "http://arxiv.org/"
  ],
  "content_scripts": [{
    "matches": [ "*://*.arxiv.org/*" ],
    "js": ["arxiv_render_html_link.js"],
    "all_frames": true
  }],
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  }

}

